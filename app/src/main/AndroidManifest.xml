<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CotarPreco"
        tools:targetApi="31">
        <activity
            android:name=".activity.empresa.EmpresaHomeActivity"
            android:exported="false" />
        <activity
            android:name=".activity.empresa.EmpresaFinalizaCadastroActivity"
            android:exported="false" />
        <activity
            android:name=".activity.usuario.UsuarioHomeActivity"
            android:exported="false" />
        <activity
            android:name=".activity.usuario.UsuarioFinalizaCadastroActivity"
            android:exported="false" />
        <activity
            android:name=".activity.app.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.Splash.Activity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.autenticacao.LoginActivity"
            android:exported="true" />
        <activity
            android:name=".activity.autenticacao.CriarContaActivity"
            android:exported="false" />
        <activity
            android:name=".activity.MainActivity"
            android:exported="true" />
    </application>

</manifest>