<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.CotarPreco" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/cor_inicial_icone</item>
        <item name="colorPrimaryVariant">@color/cor_inicial_icone</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/cor_final_icone</item>
        <item name="colorSecondaryVariant">@color/cor_final_icone</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

    </style>

    <style name="Theme.CotarPreco" parent="Base.Theme.CotarPreco" />

    <style name="Theme.Splash.Activity" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="ThemeProgressBar" parent="Theme.CotarPreco">
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="ThemeProgressBar2" parent="Theme.CotarPreco">
        <item name="colorAccent">@color/cor_inicial_icone</item>
    </style>

    <style name="CustomStyleTabLayout" parent="Theme.CotarPreco">
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="ThemeBvnOn">
        <item name="android:textSize">14sp</item>
    </style>
    
</resources>